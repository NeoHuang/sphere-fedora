# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Application
GET     /                                                   controllers.Application.home()

GET     /search                                             @controllers.ProductListController.searchProducts(page: Int ?= 1)

# Cart
GET     /cart                                               @controllers.CartController.show()
POST    /cart/add                                           @controllers.CartController.add()
POST    /cart/update                                        @controllers.CartController.update()
GET     /cart/remove/:lineItemId                            @controllers.CartController.remove(lineItemId: String)

# Checkout
GET     /checkout                                           controllers.Checkouts.show()
POST    /checkout                                           controllers.Checkouts.submit()

GET     /checkout/register                                  controllers.Checkouts.showLogin()
POST    /checkout/register                                  controllers.Checkouts.signUp()

GET     /checkout/login                                     controllers.Checkouts.showLogin()
POST    /checkout/login                                     controllers.Checkouts.logIn()

GET     /checkout/billing                                   controllers.Checkouts.showBilling()
POST    /checkout/billing                                   controllers.Checkouts.setBilling()

GET     /checkout/shipping                                  controllers.Checkouts.showShipping()
POST    /checkout/shipping                                  controllers.Checkouts.setShipping()

# Login
GET     /user/login                                         controllers.Login.signIn()
POST    /user/login                                         controllers.Login.logIn()
GET     /user/logout                                        controllers.Login.logOut()

GET     /user/register                                      controllers.Login.showSignUp()
POST    /user/register                                      controllers.Login.signUp()

# Customer
GET     /user                                               @controllers.CustomerController.show()

POST    /user/update                                        controllers.CustomerController.update()
POST    /user/update/password                               controllers.CustomerController.updatePassword()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                                       controllers.Assets.at(path="/public", file)

# Product
GET     /:product-$variant<[0-9]+>.html                     controllers.Products.select(product: String, variant: Int)

# Category
GET     /*category                                          @controllers.ProductListController.categoryProducts(category: String, page: Int ?= 1)
